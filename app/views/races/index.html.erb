<% content_for :title, 'Race Results' %>
<div class="races-index mt-5">
  <div class="top-button">
    <h2>🏆 Your current score is: <%= @current_score %></h2>
  </div>
</div>

    <div class="right-image-small">
      <%= image_tag 'https://res.cloudinary.com/dswjgd3a4/image/upload/c_pad,b_auto:predominant,fl_preserve_transparency/v1709114954/1000_F_181100725_rDOFmeNT3h1XtMlDH5I3bMKrtLsjOJ05-Photoroom.png-Photoroom_d5qtig.jpg?_s=public-apps', alt: 'Right Race Image', class: 'race-image' %>
    </div>
  </div>
      <div class="right-image-small-2">
      <%= image_tag 'https://res.cloudinary.com/dswjgd3a4/image/upload/c_pad,b_auto:predominant,fl_preserve_transparency/v1709114954/1000_F_181100725_rDOFmeNT3h1XtMlDH5I3bMKrtLsjOJ05-Photoroom.png-Photoroom_d5qtig.jpg?_s=public-apps', alt: 'Right Race Image', class: 'race-image' %>
    </div>
  </div>

<div class="latest-results">
  <div class="results-section">
    <h3 class="results-title">Your Wins</h3>
    <div class="results-box wins">
      <ul>
        <% Race.where(user_id: @current_user.id, result: 'win').limit(6).order(created_at: :desc).each do |race| %>
          <li> 🏆 <%= race.historical_figure.name %> won on <%= race.created_at.strftime('%B %d, %Y') %> in <%= race.location %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="results-section">
    <h3 class="results-title">Your Losses</h3>
    <div class="results-box losses">
      <ul>
        <% current_user.races.where(result: "win").limit(6).order(created_at: :desc).each do |race| %>
          <li> ❌ <%= race.historical_figure.name %> lost on <%= race.created_at.strftime('%B %d, %Y') %> in <%= race.location %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<div class="race-start-button-container">
  <a href="/historical_figures" class="btn-results">Start New Race</a>
</div>
