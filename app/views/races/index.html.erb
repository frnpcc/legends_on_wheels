<% content_for :title, 'Race Results' %>

<div class="races-index mt-5">
  <div class="top-button">
    <h2>🏆 Your current score is: <%= @current_score %></h2>
    <a href="/historical_figures" class="btn-result">Start New Race</a>
  </div>
</div>


  <div class="race-images d-flex justify-content-center content-align-space-between">
    <div class="left-image">
      <%= image_tag 'https://res.cloudinary.com/dswjgd3a4/image/upload/c_pad,b_auto:predominant,fl_preserve_transparency/v1709114605/trophy-for-1st-place-2nd-place-and-3rd-place-winner-cartoon-icon-illustration-championship-icon-concept-isolated-premium-flat-cartoon-style-vector-Photoroom.png-Photoroom_kojxvg.jpg?_s=public-apps', alt: 'Left Race Image', class: 'race-image' %>
    </div>
    <div class="right-image">
      <%= image_tag 'https://res.cloudinary.com/dswjgd3a4/image/upload/c_pad,b_auto:predominant,fl_preserve_transparency/v1709114954/1000_F_181100725_rDOFmeNT3h1XtMlDH5I3bMKrtLsjOJ05-Photoroom.png-Photoroom_d5qtig.jpg?_s=public-apps', alt: 'Right Race Image', class: 'race-image' %>
    </div>
  </div>

  <div class="latest-results">
    <div class="results-box wins">
      <h3>Wins</h3>
      <ul>
        <% @races.where(result: 'win').each do |race| %>
          <li> 🏆 <%= race.historical_figure.name %> won on <%= race.created_at.strftime('%B %d, %Y') %></li>
        <% end %>
      </ul>
    </div>
    <div class="results-box losses">
      <h3>Losses</h3>
      <ul>
        <% @races.where(result: 'loss').each do |race| %>
          <li> ❌ <%= race.historical_figure.name %> lost on <%= race.created_at.strftime('%B %d, %Y') %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
